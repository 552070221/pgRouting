#!/bin/sh
# ------------------------------------------------------------------------------
# Build script
# Copyright(c) pgRouting Contributors
#
# This script builds and install pgRouting
# ------------------------------------------------------------------------------
rm -rf build
mkdir build
cd build
cmake -DBUILD_LATEX=OFF -DWITH_DOC=ON -DWITH_DD=ON ..
#cmake  -DWITH_DD=ON ..
make all doc && sudo make install && (cd ..; tools/test-runner.pl -clean)
